{
    "compilerOptions": {
        "module": "commonjs",
        "esModuleInterop": true,
        "target": "es6",
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "dist",
        "allowJs": true,
        "skipLibCheck": true,
        "checkJs": true,
        "baseUrl": "./",
        "paths": {
            "@/*": ["src/*"]
        },
        "resolveJsonModule": true
    },
    "lib": ["es2015"],
    "ts-node": {
        "require": ["tsconfig-paths/register"]
    }
}
